html(lang='en')

    head

        include includes/header
        meta(name='description', content='In case of any questions you can contact us using simple form or communicate with us through any social media channel, we will respond as soon as possible')
        meta(name='author', content='')

        meta(property="og:url", content="http://fina2.net/team.html" )
        meta(property="og:type", content="article" )
        meta(property="og:title", content="Blog - FINA" )
        meta(property="og:description", content="In case of any questions you can contact us using simple form or communicate with us through any social media channel, we will respond as soon as possible" )
        meta(property="og:image", content="http://fina2.net/assets/img/Giti%20award.png" )

        title Blog - FINA

        include includes/css/core

        // Page level plugin CSS

        include includes/css/custom

    body
        include includes/navbar
        include includes/media-icons


        .container-fluid.padding-bottom
            .row
                .col-lg-12.text-center
                    h1 FINA BLOG
            .row
                .col-lg-10.offset-lg-1
                    .container-fluid.blog-head


        include includes/footer
        include includes/js/core
        include includes/js/custom
        script().
            $(document).ready(function () {
                $.getJSON("blog.json", function (json) {

                    for (let i = 0; i < json.posts.length; i++){
                        let elem = $(json.posts[i].post).css("margin","auto")
                        $('.blog-head').append(
                            '<div class="row mb-2">'
                            + $(elem).get(0).outerHTML
                            + '</div>'
                        );
                    }
                });
            });
