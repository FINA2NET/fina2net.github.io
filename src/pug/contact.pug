        #contact-map-container.container-fluid(style="padding:0 0 0 0; margin: 0!important")
            #contact-map(style="width:100%;height:calc(400px + 20vh);")
            script.
                function myMap() {
                    var uluru = {lat: 41.730297, lng: 44.7695915};
                    var map = new google.maps.Map(document.getElementById('contact-map'), {
                        zoom: 15,
                        center: uluru
                    });
                    var marker = new google.maps.Marker({
                        position: uluru,
                        map: map,
                    });
                }

            script(async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB835ntbgAP98-vne6k1NqnyK174Q0xBJo&callback=myMap").

        include includes/footer
        include includes/js/core

        include includes/js/custom

        script().
            $(document).ready(function () {
                if(window.innerWidth < 750)
                    $('#contact-map-container').addClass("map-padding");
                else
                    $('#contact-map-container').removeClass("map-padding");
            })

            window.onresize = () => {
                if (window.innerWidth < 750)
                    $('#contact-map-container').addClass("map-padding");
                else
                    $('#contact-map-container').removeClass("map-padding");
            }